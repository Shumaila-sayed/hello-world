import java.util.Scanner;

public class PeriofequiTriangle {
    public static void main(String[] args) {
        Scanner in = new Scanner(System.in);
        System.out.print("Enter side of an equilateral triangle in cm: ");
         int a = in.nextInt();
         int p = 3*a;
        System.out.println("The perimeter of this equilateral triangle is: "+ p);
    }
}
